{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types" // This is your custom types path
    ]
  },
  "include": [
    "src/**/*", // Include all source files
    "types/**/*" // Include your custom types directory
  ]
}
