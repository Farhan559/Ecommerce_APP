{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types" // Add your custom types path here
    ]
  },
  "include": [
    "src/**/*",
    "src/types/**/*" // Include your types path here
  ]
}
